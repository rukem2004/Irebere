

@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Details>
@using ContentModels = Umbraco.Web.PublishedModels;

@{
	Layout = "master.cshtml";
}

    <body>
       
        
        
        

        <div id="preloader">
            <div id="status">&nbsp;</div>
        </div>
        

       <div class="page-head"> 
        @{
    var headerpicture = Model.Value<IPublishedContent>("headerFoto",fallback: Fallback.ToAncestors);
    if (headerpicture != null)
    {
        <img src="@headerpicture.Url" />
             
    }
    }  
        </div>
        <!-- End page header -->

        <!-- property area -->
        <div class="content-area single-property" style="background-color: #FCFCFC;">&nbsp;
            <div class="container">   

                <div class="clearfix padding-top-40" >

                    <div class="col-md-8 single-property-content prp-style-1 ">
                        <div class="row">
                            <div class="light-slide-item">            
                                <div class="clearfix">
                                    <div class="favorite-and-print">
                                        <a class="add-to-fav" href="#login-modal" data-toggle="modal">
                                            <i class="fa fa-star-o"></i>
                                        </a>
                                        <a class="printer-icon " href="javascript:window.print()">
                                            <i class="fa fa-print"></i> 
                                        </a>
                                    </div> 
                                    
                                    

                                    <div id="image-gallery"class="gallery list-unstyled cS-hidden">

       
@{
    var houseForSale = Model.Value<IEnumerable<IPublishedContent>>("imagesOfHouse");
    foreach (var item in houseForSale)
    {
      <li data-thumb="@item.GetCropUrl(width:300, height:300)">
     <a href="@item.Url"> <img src  ="@item.GetCropUrl(width:800, height:500)"/></a>
   </li>
    }
}
  
  
  
  
  
                                        
